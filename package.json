{
  "name": "php-live-server",
  "displayName": "PHP Live Server",
  "description": "A VSCode extension to serve PHP projects locally.",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.startServer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.startServer",
        "title": "Start/Stop PHP Live Server"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == php",
          "command": "extension.startServer",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == php",
          "command": "extension.startServer",
          "group": "navigation"
        }
      ]
    },
  "dependencies": {
    "php-server": "^0.2.1",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "ts-loader": "^9.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production"
  }
}
